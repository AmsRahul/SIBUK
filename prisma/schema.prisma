generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  book_id String @id @default(uuid()) // UUID otomatis
  nama    String
  ISBN    String
  Harga   Int
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(uuid())
  book      Book     @relation(fields: [book_id], references: [book_id])
  book_id   String
  type      String   // "in" atau "out"
  quantity  Int
  date      DateTime
  location  String
}
